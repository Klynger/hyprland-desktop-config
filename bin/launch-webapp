#!/bin/bash

# Laucn the passed in URL as a web app in the default browser ( or firefox if the default doesn't support --app).

browser=$(xdg-settings get default-web-browser)

case $browser in
  google-chrome) ;;
  *) browser="google-chrome.desktop" ;;
esac
exec setsid uwsm-app -- $(sed -n 's/^Exec=\([^ ]*\).*/\1/p' {~/.local,/usr}/share/applications/$browser 2>/dev/null | head -1) --app="$1" "${@:2}"
